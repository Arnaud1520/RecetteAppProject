{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur notre site de recettes{% endblock %}

{% block body %}
    <style>
        .home-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 90vh;
            background: linear-gradient(135deg, #f8f9fa, #e0e0e0);
            text-align: center;
            padding: 20px;
        }

        h1 {
            font-size: 3rem;
            margin-bottom: 20px;
            color: #2c3e50;
        }

        .home-buttons {
            display: flex;
            gap: 20px;
        }

        .btn {
            padding: 15px 30px;
            font-size: 1.2rem;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            transition: 0.3s;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        .btn-success:hover {
            background-color: #1e7e34;
        }
    </style>

    <div class="home-container">
        <h1>Bienvenue sur notre site de recettes !</h1>
        <div class="home-buttons">
            <a href="{{ path('app_register') }}" class="btn btn-success">Inscription</a>
            <a href="{{ path('app_login') }}" class="btn btn-primary">Connexion</a>
        </div>
    </div>
{% endblock %}
