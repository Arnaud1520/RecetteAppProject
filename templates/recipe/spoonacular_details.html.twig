{# templates/recipe/spoonacular_details.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ recipe.name }} - Détails de la recette{% endblock %}

{% block body %}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f8f8;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #e67e22;
        margin-bottom: 20px;
    }

    .nutrition-facts {
        font-size: 1rem;
        margin-bottom: 15px;
        line-height: 1.6;
    }

    .btn {
        display: inline-block;
        background-color: #e67e22;
        color: #fff;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

    .btn:hover {
        background-color: #d35400;
    }
</style>

<div class="container mt-5">
    <h1>{{ recipe.name }}</h1>

    <h3>Informations nutritionnelles</h3>
    <ul>
        <li><strong>Calories:</strong> {{ calories }}</li>
        <li><strong>Fibres:</strong> {{ fiber }}</li>
        <li><strong>Glucides:</strong> {{ carbs }}</li>
        <li><strong>Protéines:</strong> {{ protein }}</li>
        <li><strong>Graisses:</strong> {{ fat }}</li>
    </ul>

    <a href="{{ path('recipe_view', {'id': recipe.id}) }}" class="btn mt-4">Retour à la recette</a>
</div>
{% endblock %}
