{% extends 'base.html.twig' %}

{% block title %}Ajouter une recette{% endblock %}

{% block body %}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
            margin: 30px auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #2c3e50;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
            color: #34495e;
        }

        input, textarea, select {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        textarea {
            resize: none;
            height: 100px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1rem;
            text-align: center;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-success {
            background-color: #2ecc71;
            color: white;
        }

        .btn-success:hover {
            background-color: #27ae60;
        }

        .btn-secondary {
            background-color: #95a5a6;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #7f8c8d;
        }

        .mt-3 {
            margin-top: 20px;
        }
    </style>

    <div class="container">
        <h1>Ajouter une recette</h1>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name, 'Nom de la recette') }}
                {{ form_widget(form.name, { 'attr': {'placeholder': 'Entrez le nom de la recette'} }) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, { 'attr': {'placeholder': 'Ajoutez une description'} }) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="form-group">
                {{ form_label(form.difficulty, 'Difficulté') }}
                {{ form_widget(form.difficulty, { 'attr': {'placeholder': 'Ex. : Facile, Moyenne, Difficile'} }) }}
                {{ form_errors(form.difficulty) }}
            </div>

            <div class="form-group">
                {{ form_label(form.steps, 'Étapes') }}
                {{ form_widget(form.steps, { 'attr': {'placeholder': 'Décrivez les étapes de la recette'} }) }}
                {{ form_errors(form.steps) }}
            </div>

            <div class="form-group">
                {{ form_label(form.ingredients, 'Ingrédients') }}
                {{ form_widget(form.ingredients) }}
                {{ form_errors(form.ingredients) }}
            </div>

            <div class="form-group">
                {{ form_label(form.author, 'Auteur') }}
                {{ form_widget(form.author) }}
                {{ form_errors(form.author) }}
            </div>

            <div class="form-group">
                {{ form_label(form.category, 'Catégorie') }}
                {{ form_widget(form.category) }}
                {{ form_errors(form.category) }}
            </div>

            <button type="submit" class="btn btn-success">Ajouter la recette</button>
            <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3">Annuler</a>
        {{ form_end(form) }}
    </div>
{% endblock %}
